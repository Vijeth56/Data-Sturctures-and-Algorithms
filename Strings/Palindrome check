#include <bits/stdc++.h>
using namespace std;

bool isPal(string &str){
    int begin=0;
    int end=str.length()-1;
    while(begin < end){
        if(str[begin] != str[end])
            return false;
        begin++;
        end--;
    }
    return true;
    
}
int main() {
	string str = "aba";
	if(isPal(str))
	    cout<<"YES";
    else
        cout<<"NO";
	return 0;
}
